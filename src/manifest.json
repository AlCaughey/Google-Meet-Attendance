{
    "name": "Google Meet Attendance",
    "description": "A simple(r) way to record who attended a Google Meet session",
    "permissions": [ "storage" ],
    "manifest_version": 2,
    "version": "0.5.0",
	"author": "Al Caughey",
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
    "content_scripts": [
		{
			"matches": [
				"https://meet.google.com/*"
			],
			"css": [
				"css/styles.css"
			],
			"js": [
				"js/draggable.js", "js/attendance.js"
			],
			
			"run_at": "document_idle",
			"all_frames": false
		}
    ],
	"browser_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_popup": "html/popup.html",
		"default_title": "Google Meet Attendance"
	},
  	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"web_accessible_resources": [
		"images/*.png"
	]
  }
